#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/ext_power.h>

#define BASE 0
#define GAME 1
#define NUM  2
#define NAV  3

/ {
keymap {
    compatible = "zmk,keymap";

/*                                  
*  DEFAULT 
* 
*        ` ~             _____                                               _____
*        |        .-----|  E  |-----._____                       _____.-----|  I  |-----.
*      _____.-----|  W  |_____|  R  |  T  |                     |  Y  |  U  |_____|  O  |-----._____
*     | NAV |  Q  |-----|  D  |-----|_____|                     |_____|-----|  K  |-----|  P  | GUI |  
*     |_____|-----|  S  |_____|  F  |  G  |                     |  H  |  J  |_____|  L  |-----|_____|  
*     | TAB |  A  |-----|  C  |-----|_____|                     |_____|-----| , < |-----| ; : | ' " |  
*     |_____|-----|  X  |_____|  V  |  B  |                     |  N  |  M  |_____| . > |-----|_____|  
*     | CTRL|  Z  |-----'   .-'---.=|_____|.-.._           _..-.|_____|=.---'-.   '-----| / ? | ALT |
*     !_____!-----'         | BSP |SHIFT| /     /         \     \ | NUM | ESC |         '-----!_____!
*                           '-----!_____!/ ENT /           \ SPC \!_____!-----' 
*                                       '--.._/             \_..--'
*
*
*                          VUP                                              MUP
*                          __                                                __
*                       __|  |__                                          __|  |__
*                PREV  |_TGPLAY_|  NEXT                           MLEFT  |_MCLK-1_|  MRIGHT
*                         |__|                                              |__|
*                                                                             
*                        VDOWN                                             MDOWN
*/

default_layer {
    label = "BASE";
    bindings = <
        &lhkt NAV GRAVE &kp Q       &kp W       &kp E       &kp R       &kp T               &kp Y       &kp U       &kp I       &kp O       &kp P       &kp RGUI
        &kp TAB         &kp A       &kp S       &kp D       &kp F       &kp G               &kp H       &kp J       &kp K       &kp L       &kp SEMI    &kp SQT
        &kp LCTRL       &kp Z       &kp X       &kp C       &kp V       &kp B               &kp N       &kp M       &kp COMMA   &kp DOT     &kp FSLH    &kp RALT
                                                &kp BSPC &kp LSHFT  &kp ENTER               &kp SPACE   &mo NUM &kp ESC

        &rgb_ug RGB_BRD &kp C_VOL_UP &rgb_ug RGB_BRI &kp C_VOL_DN   &none               &none       &kp RIGHT   &kp UP      &kp LEFT    &kp DOWN
    >;
};

/* 
*  GAME - this just swaps space and enter, and the esc with the backspace. An additional enter is added to the left side.
*/

game_layer {
    label = "GAME";
    bindings = <
        &trans      &trans      &trans      &trans      &trans      &trans              &trans      &trans      &trans      &trans      &trans      &trans
        &trans      &trans      &trans      &trans      &trans      &trans              &trans      &trans      &trans      &trans      &trans      &trans
        &trans      &trans      &trans      &trans      &trans      &kp ENTER           &trans      &trans      &trans      &trans      &trans      &trans
                                            &kp ESC     &trans      &kp SPACE           &kp ENTER   &trans      &kp BSPC

                    &trans      &trans      &trans      &trans      &trans              &trans      &trans      &trans      &trans      &trans
    >;
};

/*                                  
*  NUMBERS
*                        _____                                               _____
*                 .-----|  3  |-----._____                       _____.-----|  8  |-----.
*      _____.-----|  2  |_____|  4  |  5  |                     |  6  |  7  |_____|  9  |-----._____
*     | ` ~ |  1  |-----|  #  |-----|_____|                     |_____|-----|  *  |-----|  0  | DQT |  
*     |_____|-----|  @  |_____|  $  |  %  |                     |  ^  |  &  |_____|  (  |-----|_____|  
*     | CTRL|  !  |-----|  {  |-----|_____|                     |_____|-----|  |  |-----|  )  | \ | |  
*     |_____|-----| ] } |_____|  }  |  _  |                     | = + | - _ |_____|  >  |-----|_____|  
*     |SHIFT| [ { |-----'   .-'---.=|_____|.-.._           _..-.|_____|=.---'-.   '-----|  "  | ALT |
*     !_____!-----'         | DEL |SHIFT| /     /         \     \ | NUM | ESC |         '-----!_____!
*                           '-----!_____!/ SPC /           \ SPC \!_____!-----'
*                                       '--.._/             \_..--'
*
*
*                     BRIGHTNESS UP                                         MUP
*                          __                                                __
*                       __|  |__                                          __|  |__
*         PREV EFFECT  |_UDGLOW_|  NEXT EFFECT                    MLEFT  |_MCLK-2_|  MRIGHT
*                         |__|                                              |__|
*                                                                             
*                    BRIGHTNESS DOWN                                       MDOWN
*/

numbers_layer {
    label = "NUM";
    bindings = <
        &kp GRAVE   &kp N1      &kp N2      &kp N3      &kp N4      &kp N5              &kp N6      &kp N7      &kp N8      &kp N9      &kp N0      &kp DQT
        &kp RCTRL   &kp EXCL    &kp AT      &kp HASH    &kp DLLR    &kp PRCNT           &kp CARET   &kp AMPS    &kp ASTRK   &kp LPAR    &kp RPAR    &kp NUBS      
        &kp RSHFT   &kp LBKT    &kp RBKT    &kp LBRC    &kp RBRC    &kp UNDER           &kp EQUAL   &kp MINUS   &kp PIPE    &kp GT      &kp DQT     &trans
                                            &kp DEL     &trans      &kp SPACE           &trans      &trans      &trans      
                                            
                    &trans      &trans      &trans      &trans      &trans              &trans      &trans      &trans      &trans      &trans
    >;
};

/*                                  
*  NAVIGATION
*        ` ~             _____                                               _____
*        |        .-----| F3  |-----._____                       _____.-----|LBRC |-----.
*      _____.-----| F2  |_____| F4  | F5  |                     |LBKT |RBKT |_____|RBRC |-----._____
*     | NAV | F1  |-----| F8  |-----|_____|                     |_____|-----| UP  |-----|MINUS|EQUAL|  
*     |_____|-----| F7  |_____| F9  | F10 |                     |LEFT | DOWN|_____|RIGHT|-----|_____|  
*     | TAB | F6  |-----|BTNXT|-----|_____|                     |_____|-----|PG_UP|-----|GAME |MUTE |  
*     |_____|-----|BTTOG|_____| F11 | F12 |                     | HOME|PG_DN|_____| END |-----|_____|  
*     | CTRL|BTCLR|-----'   .-'---.=|_____|.-.._           _..-.|_____|=.---'-.   '-----|VOL -|VOL +|
*     !_____!-----'         | DEL |SHIFT| /     /         \     \ | NUM | ESC |         '-----!_____!
*                           '-----!_____!/ ENT /           \ SPC \!_____!-----'
*                                       '--.._/             \_..--'
*
*
*                     BRIGHTNESS UP                                       SCROLLUP
*                          __                                                __
*                       __|  |__                                          __|  |__
*         PREV EFFECT  |__RGB___|  NEXT EFFECT               SCROLLLEFT  |_MCLK-C_|  SCROLLRIGHT
*                         |__|                                              |__|
*                                                                             
*                    BRIGHTNESS DOWN                                     SCROLLDOWN
*/

navigation_layer {
    label = "NAV";
    bindings = <
        &trans     &kp F1      &kp F2       &kp F3      &kp F4  &kp F5        &kp LBKT &kp RBKT  &kp LBRC  &kp RBRC  &kp MINUS &kp EQUAL
        &trans     &kp F6      &kp F7       &kp F8      &kp F9  &kp F10       &kp LEFT &kp DOWN  &kp UP    &kp RIGHT &tog GAME &kp C_MUTE
        &trans     &bt BT_CLR &out OUT_TOG  &bt BT_NXT  &kp F11 &kp F12       &kp HOME &kp PG_DN &kp PG_UP &kp END   &kp C_VOL_DN  &kp C_VOL_DN
                                        &kp DEL     &trans       &trans       &trans      &trans      &trans      
                                            
                    &trans     &trans       &trans      &trans       &trans             &trans      &trans      &trans      &trans      &trans
    >;
};

};
};

/ {
